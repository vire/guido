{
  "name": "guido",
  "version": "1.0.0",
  "description": "Guide the machine by doing",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc",
    "build:next": "next build",
    "cz": "git-cz",
    "dev": "concurrently \"tsc --watch\" next",
    "fmt": "prettier --write server.ts 'pages/**/*.ts{x}' 'components/**/*.ts{x}'",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "prepush": "yarn lint && yarn test --onlyChanged",
    "start": "ts-node server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.*(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 85
      }
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "typescript"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn fmt",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vire/guido.git"
  },
  "keywords": [],
  "author": "Viliam Elischer <code.vire@gmail.com> (https://github.com/vire)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vire/guido/issues"
  },
  "homepage": "https://github.com/vire/guido#readme",
  "dependencies": {
    "express": "4.16.2",
    "next": "4.1.4",
    "react": "16.1.1",
    "react-dom": "16.1.1",
    "ts-node": "3.3.0",
    "typescript": "2.6.1"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.4",
    "@types/enzyme-adapter-react-16": "1.0.1",
    "@types/express": "4.0.39",
    "@types/jest": "21.1.6",
    "@types/next": "2.4.5",
    "@types/node": "8.0.53",
    "@types/prop-types": "15.5.2",
    "commitizen": "2.9.6",
    "concurrently": "3.5.0",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "prettier": "1.8.2",
    "ts-jest": "21.2.3",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "tslint-config-standard": "7.0.0",
    "tslint-react": "3.2.0"
  }
}
